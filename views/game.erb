
<div class="container pushdown">
<% if @available_slots > 0 %>
	<h2>Pick a player</h2>
	<div class="row">
	 <% @available_slots.times do |n| %>
	  		<%= erb :'partials/_player_pick', :layout => false, :locals => { :n => n, } %>
    <% end %>
  </div>
<% end %>
<% unless @ships.nil? || @grid.nil? %>
<div class="row">
  <div class="col-md-3 pushdown">
  	<% @ships.each do |ship| %>
  			<%= erb :'partials/_ship_display', :layout => false, :locals => { :ship => ship, } %>
  	<% end %>
  	</div>
  <div class="col-md-9 pushdown">
		<%= erb :'partials/_grid_display', :layout => false, :locals => { :grid => @grid, } %>
  </div>
</div>
<% end %>

</div>